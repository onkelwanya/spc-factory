{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Names Data Schema",
  "description": "Schema for validating region-based names data",
  "type": "object",
  "properties": {
    "names": {
      "type": "object",
      "description": "Region-based names data",
      "patternProperties": {
        "^[a-z-]+$": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1,
          "description": "Array of names corresponding to a specific region"
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["names"]
}