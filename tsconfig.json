{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "checkJs": false,
    "noEmit": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": [
      "@types/jquery",
      "@league-of-foundry-developers/foundry-vtt-types"
    ]
  },
  "include": ["src/**/*.ts", "src/scripts/*ts"],
  "exclude": ["node_modules", "dist"]
}
